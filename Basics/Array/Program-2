// Program to demonstrate reference to an entire array in C++
#include<iostream>
using namespace std;

int main()
{
    // Declare and initialize array 'a' with 5 integers
    int a[] = {10, 20, 30, 40, 50};

    // Create a reference 'ra' to the array 'a'
    // ra becomes an alias of 'a', meaning both refer to the same memory
    int (&ra)[5] = a;

    int i;

    // Display values using the reference name 'ra'
    for(i = 0; i < 5; i++)
    {
        cout << "ra[" << i << "] = " << ra[i] << endl;
    }

    // Display base address of array using both names
    // Array name holds the address of the first element (a[0])
    cout << "a = " << a << endl;
    cout << "ra = " << ra << endl;

    // Demonstrating pointer arithmetic with both names
    // Since int takes 4 bytes, each +1 moves 4 bytes forward
    cout << "a + 0 = " << a + 0 << endl; //referes to the pointer
    cout << "ra + 0 = " << ra + 0 << endl;

    cout << "a + 1 = " << a + 1 << endl;
    cout << "ra + 1 = " << ra + 1 << endl;

    cout << "a + 2 = " << a + 2 << endl;
    cout << "ra + 2 = " << ra + 2 << endl;

    cout << "a + 3 = " << a + 3 << endl;
    cout << "ra + 3 = " << ra + 3 << endl;

    cout << "a + 4 = " << a + 4 << endl;
    cout << "ra + 4 = " << ra + 4 << endl;

    return 0;
}
